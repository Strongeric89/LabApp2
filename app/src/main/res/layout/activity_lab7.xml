<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#66ccff"
    android:paddingBottom="@dimen/activity_vertical_margin"
  >



    <EditText
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Task Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="items from DB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSQL"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="70px"

        android:layout_below="@+id/taskName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="click to add to sqlite"
        android:onClick="addButtonClicked"
    android:background="#000000"
    android:textColor="#ffffff"
    android:id="@+id/clickMeBtn"
        android:layout_above="@+id/deleteMeBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click to delete from sqlite"
        android:background="#000000"
        android:textColor="#ffffff"
        android:id="@+id/deleteMeBtn"
        android:onClick="deleteButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
